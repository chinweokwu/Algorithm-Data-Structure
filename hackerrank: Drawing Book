JAVASCRIPT
function pageCount(n, p) {
    if (p/2  <= checkfromback(n,p)){
      return p/2
    } else {
      checkfromback(n,p)
    }
};

function checkfromback(n,p){
  n%2 === 0 ? (n-p)/2 : (n-p + 1)/2
}


console.log(pageCount(5,4))

RUBY
def pageCount(n, p)
    if p/2 <= countfromBack(n,p)
        p/2
    else
        countfromBack(n,p)
    end
end

def countfromBack(n,p)
   n.odd? ? (n-p)/2 : (n-p+1)/2 
end
